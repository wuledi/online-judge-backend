<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuledi.interfaces.mapper.UserInterfaceInfoMapper">

    <resultMap id="BaseResultMap" type="com.wuledi.interfaces.model.entity.UserInterfaceInfoDO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="interfaceInfoId" column="interface_info_id"/>
        <result property="totalNumber" column="total_number"/>
        <result property="usedNumber" column="used_number"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,user_id,interface_info_id,total_number,used_number,status,
        create_time,update_time,is_delete
    </sql>

    <select id="listTopInvokeInterfaceInfo" resultType="com.wuledi.interfaces.model.entity.UserInterfaceInfoDO">
        select interface_info_id, sum(total_number) as total_number
        from user_interface_info
        imGroup by interface_info_id
        order by total_number desc limit #{limit};
    </select>
</mapper>
